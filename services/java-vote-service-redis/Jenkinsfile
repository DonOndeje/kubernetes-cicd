node {
    def app

    stage('Clone repository') {
        checkout scm
    }

    stage('Change directory to service') {
        dir services/java-vote-service-redis
    }

    stage('Package jar file with Maven') {
        withMaven(
            // Maven installation declared in the Jenkins "Global Tool Configuration"
            maven: 'M3') {
            // Run the maven build
            sh "mvn pom.xml clean install"
        } 
    }

    stage('Build image with Docker') {
        app = docker.build("services/java-vote-service-redis:${env.BUILD_NUMBER}")
    }

   stage('Push image to container registry') {
        docker.withRegistry('https://sabbour.azurecr.io', 'acr-hub-credentials') {
            app.push("services/java-vote-service-redis:${env.BUILD_NUMBER}")
            app.push("services/java-vote-service-redis:latest")
        }
    }
}